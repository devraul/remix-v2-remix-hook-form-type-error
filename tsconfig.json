{
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    // OLD REMIX SETUP
    "module": "Node16",
    "moduleResolution": "node",
    "target": "ES2019",
    // NEW REMIX SETUP
    // "target": "ES2022",
    // "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}